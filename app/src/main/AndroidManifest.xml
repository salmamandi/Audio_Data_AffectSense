<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="research.sg.edu.edapp">
    <!-- Permission to access camera of device -->
    <uses-feature android:name="android.hardware.camera2.full" />
    <uses-feature android:name="android.hardware.telephony" />
    <!--Permission for recording audio and storage of audio in users device-->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- permission to get the imei number -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Permission to add shortcut to home -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.GET_TASKS" /> <!-- Permission to start Alarm on device reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- Permission to get partial lock -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- Permission for app usage access -->
    <!-- Permission to get package name -->
    <uses-permission xmlns:tools="http://schemas.android.com/tools"
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Permission to network related access, internet connection -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">
        <activity
            android:name=".AudioRecorder"
            android:exported="false" />
        <!-- this two activities are related to review images-->
        <!--<activity android:name=".FullImageActivity" />
        <activity android:name=".activity_images" />-->
        <activity android:name=".LoginDropboxxActivity" />
        <activity android:name=".snap_before" />
        <activity android:name=".Instruction_data" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PerformRegistration"
            android:label="@string/title_activity_perform_registration"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".UserConsent"
            android:label="@string/title_activity_user_consent" />
        <activity
            android:name=".MoodRecorder"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_mood_recorder">
            <intent-filter>
                <action android:name="research.sg.edu.edapp.MoodRecorder" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ValidatePredictions"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_validate_predictions">
            <intent-filter>
                <action android:name="research.sg.edu.edapp.ValidatePredictions" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KbImePreferences"
            android:label="@string/settings_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StatsMenu"
            android:label="@string/title_activity_stats_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StatsType"
            android:label="@string/title_activity_stats_type"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SeeDatabase" />
        <activity
            android:name=".StatsDescription"
            android:label="Description"
            android:theme="@style/AppDialogTheme" />
        <activity
            android:name=".AskPassword"
            android:label="Developer Mode"
            android:theme="@style/AppDialogTheme" />
        <activity
            android:name=".AppUsageDist"
            android:label="Emotion Distribution"
            android:theme="@style/AppDialogTheme" />
        <activity
            android:name=".UpdateSystem"
            android:label="Updates"
            android:theme="@style/AppDialogTheme" />
        <activity
            android:name=".MoodConfirmation"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_mood_confirmation">
            <intent-filter>
                <action android:name="research.sg.edu.edapp.MoodConfirmation" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dropbox.core.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask">
            <intent-filter>

                <!-- CHANGE HERE!!!! UPDATE SCHEME TO "db-KEY" -->
                <!-- Insert your app key after “db-  ...” -->
                <data android:scheme="db-sry3wdsr8kzwz6r" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MoodRecordPopUp"
            android:label="Record Your Mood"
            android:theme="@style/AppDialogTheme" />

        <meta-data
            android:name="com.facebook.accountkit.ApplicationName"
            android:value="@string/app_name" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/FACEBOOK_APP_ID" />
        <meta-data
            android:name="com.facebook.accountkit.ClientToken"
            android:value="@string/ACCOUNT_KIT_CLIENT_TOKEN" />
        <meta-data
            android:name="com.facebook.accountkit.FacebookAppEventsEnabled"
            android:value="false" />

        <provider
            android:name=".kb.KbContentProvider"
            android:authorities="research.sg.edu.edapp.kb.KbContentProvider"
            android:exported="true"
            android:multiprocess="true" />
        <provider
            android:name=".StatsProvider"
            android:authorities="research.sg.edu.edapp.StatsProvider" />
        <provider
            android:name=".FeaturesProvider"
            android:authorities="research.sg.edu.edapp.FeaturesProvider" />
        <provider
            android:name=".TestFeaturesProvider"
            android:authorities="research.sg.edu.edapp.TestFeaturesProvider" />
        <provider
            android:name=".ESMContentProvider"
            android:authorities="research.sg.edu.edapp.ESMContentProvider" />
        <provider
            android:name=".ConfirmFeaturesProvider"
            android:authorities="research.sg.edu.edapp.ConfirmFeaturesProvider" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"
                tools:replace="android:resource" />
        </provider>

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".NotificationSevice"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".UploadAlarm"
            android:enabled="true"
            android:exported="true" />
        <receiver android:name=".DeviceBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <service
            android:name=".MasterService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".SendNotification"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".UploadService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".kb.KbSwipeKeyboard"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>
        <service
            android:name=".AppLoggingService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".BuildModelService"
            android:exported="false" />
        <service
            android:name=".ExtractFeaturesService"
            android:exported="false" />
        <service
            android:name=".PredictionService"
            android:exported="false" />
        <service
            android:name=".CalculateKLD"
            android:exported="false" />
        <service
            android:name=".UploadData"
            android:exported="false" />
        <service
            android:name=".MyTestPrediction"
            android:exported="false" />
        <service
            android:name=".UploadJob"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>