<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.42"
            android:text="26-09-2020 23:59:56.000"
            android:textAppearance="@android:style/TextAppearance.Material.Widget"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prediction_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prediction : "
                android:textAppearance="@android:style/TextAppearance.Material.Widget"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/emotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy"
                android:textAppearance="@android:style/TextAppearance.Material.Widget"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                android:layout_width="49dp"
                android:layout_height="34dp"
                android:layout_marginLeft="5dp"
                android:text="Clear"
                android:textSize="8sp" />

        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/emotionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

            <RadioButton
                android:id="@+id/happyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Happy"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/sadRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sad"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/stressedRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stressed"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        <RadioButton
                android:id="@+id/relaxedRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Relaxed"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

    </RadioGroup>

</LinearLayout>